{
  "name": "@mirawision/chrome-pulse",
  "version": "1.0.0",
  "description": "A powerful state management library for Chrome extensions, providing seamless communication between different extension contexts and components.",
  "main": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    },
    "./base-pulse": {
      "types": "./base-pulse.d.ts",
      "default": "./base-pulse.js"
    },
    "./external-pulse": {
      "types": "./external-pulse.d.ts",
      "default": "./external-pulse.js"
    },
    "./global-pulse": {
      "types": "./global-pulse.d.ts",
      "default": "./global-pulse.js"
    },
    "./local-pulse": {
      "types": "./local-pulse.d.ts",
      "default": "./local-pulse.js"
    },
    "./popup-pulse": {
      "types": "./popup-pulse.d.ts",
      "default": "./popup-pulse.js"
    },
    "./side-pulse": {
      "types": "./side-pulse.d.ts",
      "default": "./side-pulse.js"
    },
    "./types": {
      "types": "./types.d.ts",
      "default": "./types.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node index.js",
    "test": "jest",
    "pack": "npm pack",
    "prepublish": "npm run build",
    "publish": "npm publish --access public"
  },
  "keywords": [
    "chrome",
    "extension",
    "state management",
    "communication",
    "messaging",
    "typescript",
    "background",
    "content script",
    "popup",
    "side panel",
    "chrome extension",
    "browser extension",
    "state",
    "store"
  ],
  "author": "Yelysei Lukin <yelysei277@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/MiraWision/chrome-pulse.git"
  },
  "bugs": {
    "url": "https://github.com/MiraWision/chrome-pulse/issues"
  },
  "homepage": "https://github.com/MiraWision/chrome-pulse",
  "license": "MIT",
  "dependencies": {
    "@mirawision/chrome-api": "1.0.1"
  },
  "devDependencies": {
    "@types/chrome": "0.1.3",
    "@types/jest": "29.5.12",
    "jest": "29.7.0",
    "ts-jest": "29.1.2",
    "typescript": "5.3.3"
  }
}
